<%- include('partials/header', { siteTitle: title }) %>

<main class="container">
  <h1>Philosophies</h1>

  <div class="card-grid">
    <% for (let category in philosophies) { %>
      <% for (let name in philosophies[category]) { %>
        <div class="card">
          <a href="/philosophies/<%= name %>" class="card-link">
            <img src="/phlimages/<%= name.toLowerCase().replace(/ /g, "_") %>.jpg" alt="<%= name %>">
            <h3><%= name %></h3>
          </a>
          <p class="card-category"><%= category %></p>
          <a href="/philosophies/<%= name %>" class="btn">View Details</a>
        </div>
      <% } %>
    <% } %>
  </div>

  <p><a href="/">Back Home</a></p>
</main>

<%- include('partials/footer') %>
<link rel="stylesheet" href="/style.css">