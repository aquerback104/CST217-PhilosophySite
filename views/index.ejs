<%- include('partials/header', { siteTitle: title }) %>

<main class="container text-center mt-5">
  <h2>Welcome to the Philosophy Hub üåç</h2>
  <img src="/thinker.jpg" alt="Thinker Statue" class="img-fluid my-4" style="max-width: 600px;">
  <p class="lead">
    Explore timeless ideas, question everything, and engage with the wisdom of the ages.
  </p>

  <div class="mt-4">
    <a href="/articles" class="btn btn-primary mx-1">Explore Articles</a>
    <a href="/quotes" class="btn btn-primary mx-1">Daily Quotes</a>
    <a href="/philosophers" class="btn btn-primary mx-1">Philosophers</a>
    <a href="/philosophies" class="btn btn-primary mx-1">Philosophies</a>
  </div>

  <!-- Favorite Philosopher Form -->
  <section class="mt-5" style="max-width: 400px; margin: 0 auto; text-align: left;">
    <h3 class="mb-3 text-center">Tell Us Your Favorite Philosopher</h3>
    <form action="/form" method="POST">
      <div class="form-group mb-3">
        <label for="name">Your Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your name" required class="form-control">
      </div>

      <div class="form-group mb-3">
        <label for="favoritePhilosopher">Favorite Philosopher:</label>
        <input type="text" id="favoritePhilosopher" name="philosopher" placeholder="Enter a philosopher" required class="form-control">
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </form>
  </section>
</main>

<%- include('partials/footer') %>